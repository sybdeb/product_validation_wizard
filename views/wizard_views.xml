<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_validation_wizard_form" model="ir.ui.view">
        <field name="name">product.validation.wizard.form</field>
        <field name="model">product.validation.wizard</field>
        <field name="arch" type="xml">
            <form string="Product Valideren voor Publicatie">
                <group>
                    <group>
                        <field name="product_id" readonly="1"/>
                        <field name="min_stock_required"/>
                        <field name="image_present"/>
                        <field name="price_set"/>
                        <field name="supplier_stock_ok"/>
                        <field name="sellable_ok"/>
                    </group>
                    <group>
                        <field name="is_valid" widget="boolean_button" invisible="is_valid == False"/>
                        <field name="reasons" invisible="is_valid == True" readonly="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_validate" string="Valideren en Publiceren" type="object" class="btn-primary" invisible="is_valid == False"/>
                    <button string="Annuleren" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_validation_wizard" model="ir.actions.act_window">
        <field name="name">Valideer Product</field>
        <field name="res_model">product.validation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
